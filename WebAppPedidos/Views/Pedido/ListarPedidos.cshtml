
@{
    ViewData["Title"] = "Listar Pedidos";
    var listPedidos = ViewData["ListaPedidos"] as List<WebAppPedidos.Models.Pedido>;
}

<title>@ViewData["Title"]</title>

<meta charset="utf-8" />
<style>
    table, th, td {
        border: 1px solid black;
        text-align: left;
    }
</style>

<h2>Gerenciamento de Pedidos</h2>

<table>
    <tr>
        <th>Produto</th>
        <th>Quantidade</th>
        <th>Valor</th>
        <th>Data</th>
        <th>Fornecedor</th>
    </tr>
    @foreach (WebAppPedidos.Models.Pedido pedido in listPedidos)
    {
        <tr>
            <td>@pedido.Produto</td>
            <td>@pedido.Quantidade</td>
            <td>@pedido.Valor</td>
            <td>@pedido.Data</td>
            <td>@pedido.Fornecedor</td>
        </tr>
    }
</table>

<p style="float: left;"><b>Data de atualização:</b>
<p style="float: left;" id="data"></p>

<script>
    var d = new Date();
    var today = new Date();
    var yyyy = today.getFullYear();

    var dd = today.getDate().toString();
    if (dd.length == 1) {
        dd = '0' + dd;
    }

    var mm = (today.getMonth() + 1).toString();
    if (mm.length == 1) {
        mm = '0' + mm;
    }

    var hours = today.getHours();
    if (hours.toString().length == 1) {
        hours = '0' + hours;
    }

    var minutes = today.getMinutes();
    if (minutes.toString().length == 1) {
        minutes = '0' + minutes;
    }

    var seconds = today.getSeconds();
    if (seconds.toString().length == 1) {
        seconds = '0' + seconds;
    }

    d = dd + "/" + mm + "/" + yyyy + " " + hours + ":" + minutes + ":" + seconds;
    document.getElementById("data").innerHTML = d;
</script>