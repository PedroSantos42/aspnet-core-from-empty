@model WebAppPedidos.Models.Pedido
@{ var pedido = ViewData["pedido"] as WebAppPedidos.Models.Pedido; }

<head>
    <title>Alterar Pedido</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body class="jumbotron">
    <h2>Alterar Pedido</h2>
    <br />
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Editar", "Pedido", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="produto">Produto</label><br>
                    <input type="text" id="produto" name="produto" value="@pedido.Produto" required><br>
                </div>
                <div class="form-group">
                    <label for="quantidade">Quantidade</label><br>
                    <input type="number" step="1" id="quantidade" name="quantidade" value="@pedido.Quantidade"><br>
                </div>
                <div class="form-group">
                    <label for="valor">Valor</label><br>
                    <input type="number" step="1" id="valor" name="valor" required value="@pedido.Valor"><br>
                </div>
                <div class="form-group">
                    <label for="data">Data</label><br>
                    <input type="text" id="data" name="data" value="@pedido.Data"><br>
                </div>
                <div class="form-group">
                    <label for="fornecedor">Fornecedor</label><br>
                    <input type="text" id="fornecedor" name="fornecedor" value="@pedido.Fornecedor"><br>
                </div>
                <button class="btn btn-primary btn-lg" type="submit">Salvar</button>
                <div class="form-group">
                    <input type="hidden" id="pedidoId" name="pedidoId" value="@pedido.PedidoId" />
                </div>
            }
        </div>
    </div>
</body>