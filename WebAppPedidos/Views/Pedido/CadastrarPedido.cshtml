@model IEnumerable<WebAppPedidos.Models.Pedido>
@{ var existePedidoInfo = ViewData["existePedido"];
    if (existePedidoInfo != null)
    {
        <script>alert("Pedido já foi cadastrado!")</script>
    }
}

<head>
    <title>Cadastro de Pedidos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body class="jumbotron">
    <h2>Criar Pedido</h2>
    <br />
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Salvar", "Pedido", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="produto">Produto</label><br>
                    <input type="text" id="produto" name="produto" required><br>
                </div>
                <div class="form-group">
                    <label for="quantidade">Quantidade</label><br>
                    <input type="number" step="1" id="quantidade" name="quantidade"><br>
                </div>
                <div class="form-group">
                    <label for="valor">Valor</label><br>
                    <input type="number" step="1" id="valor" name="valor" required><br>
                </div>
                <div class="form-group">
                    <label for="data">Data</label><br>
                    <input type="text" id="data" name="data"><br>
                </div>
                <div class="form-group">
                    <label for="fornecedor">Fornecedor</label><br>
                    <input type="text" id="fornecedor" name="fornecedor"><br>
                </div>
                <button class="btn btn-primary btn-lg" type="submit">Salvar</button>
            }
        </div>
    </div>
</body>
